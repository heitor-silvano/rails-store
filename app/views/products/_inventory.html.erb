<% if product.inventory_count.postive? %>
  <p><%= product.inventory_count %> in stock</p>

<%else%>
  <p>Out of stock</p>
  <p>E-mail me when available.</p>

  <%= form_with model: [product, Subscriber.new ] do |form| %>
    <%= form.email_field :email, placeholder: "exemplo@email.com", required: true%>
    <%= form.submit "Enviar"%>
  <%end%>
<% end %>